<%- include('./partials/header.ejs') %>
    
<div class="container">
    <div class="row">
        <div class="col-sm-6 mt-5">
            <h2 class="alert alert-success text-center" role="alert">Add New Student</h2>
            <form method="post">
                <div class="mb-3">
                    <label for="name" class="from-label">Name</label>
                    <input type="text" class="from-control" id="name" name="name">
                </div>
                <div>
                    <div class="mb-3">
                        <label for="age" class="form-label">Age</label>
                        <input type="text" class="from-control" id="age" name="age">
                    </div>
                    <div class="mb-3">
                        <label for="fees" class="form-label">Fees</label>
                        <input type="text" class="from-control" id="fees" name="fees">
                    </div>
                    <button type="submit" class="btn btn-primary">Submit</button>
                </div>
            </form>
        </div>
        <div class="col-sm-6 mt-5">
            <h2 class="alert alert-danger text-center" role="alert">List of Student</h2>
            <%# Show All Data %>
            <table class="table table-striped table-hover">
                <thead>
                    <tr>
                        <th scope="col">No</th>
                        <th scope="col">Name</th>
                        <th scope="col">Age</th>
                        <th scope="col">Fees</th>
                        <th scope="col">Action</th>
                    </tr>
                </thead>
                <tbody>
                    <% var i=1 %>
                    <% data.forEach((item) => { %>
                        <tr>
                            <th><%= i++ %></th>
                            <th><%= item.name %> </th>
                            <th><%= item.age %> </th>
                            <th><%= item.fees %> </th>
                            <td>

                                <!-- //edit button -->
                                <form action="/student/edit/<%= item._id %>" class="d-inline" method="get">
                                    <button type="submit" class="btn">
                                        <i class="fas fa-pen-square text-info"></i>
                                    </button>
                                </form>

                                <!-- //delete button -->
                                <form action="/student/delete/<%= item._id %>" class="d-inline" method="post">
                                    <button type="submit" class="btn">
                                        <i class="fas fa-trash text-danger"></i>
                                    </button>
                                </form>
                                
                            </td>
                        </tr>
                    <% }) %>
                </tbody>
            </table>
        </div>
    </div>
</div>

<%- include('./partials/footer.ejs') %>
    
   